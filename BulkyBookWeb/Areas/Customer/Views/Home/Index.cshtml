@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6 p-3" >
            <div class="col-12 p-2" style="border:1px solid #008cba;border-radius:5px; box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.5);">
                <div class="card" >
                    <image src="@product.ImageUrl" class="card-img-top rounded" />
                    <div class="pl-1 p-1">
                        <p class="card-title h5 text-primary"><b>@product.Title</b></p>
                        <p class="card-title text-info">@product.Author</p>
                    </div>
                    <div class="pl-1">
                        <p class="card-title h5 text-primary">List Price: <strike> kr<b>@product.ListPrice.ToString("0.00")</b></strike></p>
                    </div>
                    <div class="pl-1">
                        <p class="card-title h5 text-primary">As low as: kr<b>@product.Price100.ToString("0.00")</b></p>
                    </div>
                </div>
                <div>
                    <a asp-action="Details" class="btn btn-primary form-control " asp-route-productId="@product.Id">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>
