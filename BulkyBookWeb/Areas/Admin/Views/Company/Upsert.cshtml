@model Company
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-area="Admin" asp-action="Upsert" enctype="multipart/form-data" asp-controller="Company">
    <input asp-for="Id" hidden/>

    <div class="border bg-light p-3 mt-4 row" style="border-radius:5px; box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
        <div class="col-12 ob-2">
            <h2 class="text-primary">@(Model.Id!=0?"Update":"Create") Company</h2>
            <hr />
        </div>
        <!--
            Using the inline validation so do not need this.
        <div asp-validation-summary="All"></div>
        -->
        <div class="mb-3">
            <label asp-for="CompanyName"></label>
            <input  asp-for="CompanyName" class="form-control"/>
            <span asp-validation-for="CompanyName" class="text-warning"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input  asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-warning"></span>
        </div>
        <div class="mb-3">
            <label asp-for="StreetAddress"></label>
            <input  asp-for="StreetAddress" class="form-control"/>
            <span asp-validation-for="StreetAddress" class="text-warning"></span>
        </div>
        <div class="mb-3">
            <label asp-for="City"></label>
            <input  asp-for="City" class="form-control"/>
            <span asp-validation-for="City" class="text-warning"></span>
        </div>
        <div class="mb-3">
            <label asp-for="State"></label>
            <input  asp-for="State" class="form-control"/>
            <span asp-validation-for="State" class="text-warning"></span>
        </div>
         <div class="mb-3">
            <label asp-for="PostalCode"></label>
            <input  asp-for="PostalCode" class="form-control"/>
            <span asp-validation-for="PostalCode" class="text-warning"></span>
        </div>
         <div class="mb-3">
            <label asp-for="PhoneNumber"></label>
            <input  asp-for="PhoneNumber" class="form-control"/>
            <span asp-validation-for="PhoneNumber" class="text-warning"></span>
        </div>
        
        <div class="col-12">
            @if(Model.Id!=0)
            {
                <button type="submit" class="btn btn-primary" style="width:150px; box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;">Update</button>
            }
            else
            {
                <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:150px; box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;">Create</button>
            }
            &nbsp;
            <a asp-area="Admin" asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px; box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}